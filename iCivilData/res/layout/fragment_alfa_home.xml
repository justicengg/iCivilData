        android:id="@+id/imageButton_home_debug"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:padding="10dp"
        android:contentDescription="@string/fragment_alfa_home_text"
        android:layout_alignTop="@+id/imageView_vertical_line_01"
        android:layout_toRightOf="@+id/imageView_vertical_line_01"
        android:text = "@string/alfa_button_text_debug"
        android:background="@drawable/alfa_home_tools_button_bg"
        android:drawableTop="@drawable/alfa_home_ic_debug" />
    
     
     
     
     <ImageView
        android:id="@+id/imageView_vertical_line_02"
        android:layout_width="2dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:layout_alignTop="@+id/imageButton_home_debug"
        android:layout_toRightOf="@+id/imageButton_home_debug"
        android:src="@drawable/alfa_home_panel_vetical_line" /> -->

    <Button
        android:id="@+id/imageButton_home_myinfo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:padding="10dp"
        android:text = "@string/alfa_button_text_myinfo"
        android:background="@drawable/alfa_home_tools_button_bg"
        android:contentDescription="@string/fragment_alfa_home_text"
        android:layout_alignTop="@+id/imageView_vertical_line_01"
        android:layout_toRightOf="@+id/imageView_vertical_line_01"
        android:drawableTop="@drawable/alfa_home_ic_setting" />
    
     <ImageView
        android:id="@+id/imageView_vertical_line_10"
        android:layout_width="2dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:layout_alignTop="@+id/imageButton_home_warn"
        android:layout_toRightOf="@+id/imageButton_home_warn"
        android:src="@drawable/alfa_home_panel_vetical_line" />

     <Button
         android:id="@+id/imageButton_home_warn"
         android:layout_width="80dp"
         android:layout_height="80dp"
         android:layout_alignParentRight="true"
         android:layout_alignTop="@+id/imageButton_home_myinfo"
         android:background="@drawable/alfa_home_tools_button_bg"
         android:contentDescription="@string/fragment_alfa_home_text"
         android:drawableTop="@drawable/alfa_home_ic_warn"
         android:padding="10dp"
         android:text="@string/alfa_button_text_warn" />
    
</RelativeLayout>